# =============================
# Server Configuration
# =============================
SERVER_PORT=8080
SERVER_HOST=localhost
ENVIRONMENT=development

# =============================
# Database Configuration (4 separate databases)
# =============================

# Core Database (users, wallets, accounts)
CORE_DB_DSN=postgresql://user:pass@localhost:5432/core_db?sslmode=disable

# KYC Database (identity verification, compliance)
KYC_DB_DSN=postgresql://user:pass@localhost:5433/kyc_db?sslmode=disable

# Rates Database (exchange rates, price history)
RATES_DB_DSN=postgresql://user:pass@localhost:5434/rates_db?sslmode=disable

# Audit Database (audit logs, sensitive operations)
AUDIT_DB_DSN=postgresql://user:pass@localhost:5435/audit_db?sslmode=disable

# =============================
# Redis Configuration
# =============================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================
# Security Configuration
# =============================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-here-change-in-production

# JWT Expiration
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# =============================
# Blockchain RPC Endpoints
# =============================

# Bitcoin
BTC_RPC_URL=https://bitcoin-rpc.example.com
BTC_RPC_USER=user
BTC_RPC_PASSWORD=pass
BTC_NETWORK=mainnet

# Ethereum
ETH_RPC_URL=https://ethereum-rpc.example.com
ETH_NETWORK=mainnet
ETH_CHAIN_ID=1

# Solana
SOL_RPC_URL=https://solana-rpc.example.com
SOL_NETWORK=mainnet-beta

# Stellar
XLM_HORIZON_URL=https://horizon.stellar.org
XLM_NETWORK=public

# =============================
# External APIs
# =============================

# CoinGecko API
COINGECKO_API_KEY=your-coingecko-api-key
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# KYC Provider (SumSub)
KYC_PROVIDER_API_KEY=your-kyc-provider-key
KYC_PROVIDER_BASE_URL=https://api.sumsub.com
KYC_PROVIDER_APP_TOKEN=your-kyc-app-token

# =============================
# Rate Limiting
# =============================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# =============================
# TLS/SSL Configuration
# =============================
SERVER_TLS_ENABLED=false
SERVER_TLS_CERT=/path/to/cert.pem
SERVER_TLS_KEY=/path/to/key.pem

# =============================
# Monitoring & Observability
# =============================

# Sentry Error Tracking
SENTRY_DSN=

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# =============================
# WebSocket Configuration
# =============================
WS_ENABLED=true
WS_HEARTBEAT_INTERVAL=30s
WS_TIMEOUT=60s

# =============================
# Worker Configuration
# =============================
PRICE_FEED_INTERVAL=5s
TRANSACTION_MONITOR_INTERVAL=10s
PORTFOLIO_CALC_INTERVAL=1m

# =============================
# Feature Flags
# =============================
ENABLE_2FA=true
ENABLE_KYC=true
ENABLE_SWAP=true
ENABLE_ANALYTICS=true

# =============================
# Blockchain Confirmation Thresholds
# =============================
BTC_CONFIRMATION_THRESHOLD=6
ETH_CONFIRMATION_THRESHOLD=12
SOL_CONFIRMATION_THRESHOLD=32
XLM_CONFIRMATION_THRESHOLD=1

# =============================
# Transaction Limits
# =============================
MAX_TRANSACTION_AMOUNT_USD=10000
DAILY_TRANSACTION_LIMIT_USD=50000
