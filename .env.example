# ===============================
# üåç GLOBAL SETTINGS
# ===============================
APP_NAME=CryptoWalletAggregator
APP_ENV=development
APP_DEBUG=true
APP_PORT=8080

# ===============================
# üß† BACKEND (GOLANG API)
# ===============================
# Fiber / Echo API Config
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# JWT & Security
JWT_SECRET=supersecretjwtkey
JWT_EXPIRY_HOURS=24
PASSWORD_SALT_ROUNDS=12

# ===============================
# üóÑ DATABASE CONFIG (PostgreSQL)
# ===============================
# Database host from docker network
DB_HOST=postgres
DB_PORT=5432
DB_USER=crypto_user
DB_PASSWORD=crypto_pass
DB_SSLMODE=disable

# Database names (match docker init)
DB_NAME_CORE=core_db
DB_NAME_KYC=kyc_db
DB_NAME_RATES=rates_db
DB_NAME_AUDIT=audit_db

# Connection Pool
DB_MAX_CONNECTIONS=10
DB_MAX_IDLE_CONNECTIONS=5

# ===============================
# üî• REDIS CONFIG (Cache & Queue)
# ===============================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=60 # seconds

# ===============================
# üîó BLOCKCHAIN RPC ENDPOINTS
# ===============================
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key
BTC_RPC_URL=https://api.blockcypher.com/v1/btc/main
SOL_RPC_URL=https://api.mainnet-beta.solana.com
XLM_HORIZON_URL=https://horizon.stellar.org

# ===============================
# üí± EXTERNAL APIS (RATES / SWAP)
# ===============================
COINGECKO_API_URL=https://api.coingecko.com/api/v3
BINANCE_API_URL=https://api.binance.com/api/v3
RATE_CACHE_TTL=30 # seconds

# ===============================
# üîê ENCRYPTION & SECURITY
# ===============================
AES_SECRET_KEY=your32byteaeskeyhere
KMS_ENABLED=false
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=optional_token_here

# ===============================
# ü™™ KYC / AML MODULE
# ===============================
KYC_PROVIDER=mock
KYC_WEBHOOK_SECRET=kycwebhooksecret
AML_RULE_REFRESH_INTERVAL=300 # seconds

# ===============================
# üìä MONITORING & LOGGING
# ===============================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_URL=http://grafana:3000

LOG_LEVEL=info
LOG_FORMAT=json

# ===============================
# üíå EMAIL / ALERT CONFIG
# ===============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=youremail@gmail.com
SMTP_PASS=app_password_here
ALERT_EMAIL=admin@crypto.local

# ===============================
# üíª FRONTEND (Next.js)
# ===============================
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_APP_NAME=Crypto Wallet Dashboard
NEXT_PUBLIC_DEFAULT_CHAIN=ETH
NEXT_PUBLIC_THEME=dark
NEXT_PUBLIC_ENV=development
